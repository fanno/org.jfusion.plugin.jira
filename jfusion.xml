<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE extension SYSTEM "http://www.jfusion.org/xml/dtd/2.0/plugin-install.dtd">
<extension type="jfusion" version="1.5.0">
	<name>jira</name>
    <creationDate>June 2008</creationDate>
    <author>JFusion Development Team</author>
    <authorEmail>fannoj@gmail.org</authorEmail>
    <authorUrl>www.jfusion.org</authorUrl>
	<copyright>Copyright (C) 2008 JFusion. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
    <version>3.0.0-000</version>
    <revision>$revision$</revision>
    <timestamp>$timestamp$</timestamp>

    <description>Jira plugin for JFusion</description>

    <files>
        <folder>src</folder>
        <filename>jfusion.xml</filename>
    </files>

    <form>
        <fields name="params">
            <fieldset name="PLUGIN_GENERAL_DETAILS">
                <field name="description" type="text" size="60" default="jira plugin for jfusion (jira 6.x+)" label="DESCRIPTION"  description="DESCRIPTION_DESC"/>
                <field name="source_url" type="text" size="60" default="http://jira.site.com/" label="SOURCE_URL" description="SOURCE_URL_DESC" />
                <field name="rest_username" type="text" size="20" default="" label="REST_USER" description="REST_USER_DESC"/>
                <field name="rest_password" type="password" size="20" default="" label="REST_USER" description="REST_PASSWORD_DESC"/>
            </fieldset>

            <fieldset name="USER_OPTIONS">
                <field name="update_email" type="radio" class="btn-group" default="1" label="UPDATE_EMAIL" description="UPDATE_EMAIL_DESC">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>

                <field name="allow_delete_users" type="radio" class="btn-group" default="0" label="ALLOW_DELETE_USERS" description="ALLOW_DELETE_USERS_DESCR">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>

                <field name="registration" type="list" default="1" label="REGISTRATION" description="REGISTRATION_DESCR">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
            </fieldset>
        </fields>
    </form>
</extension>
